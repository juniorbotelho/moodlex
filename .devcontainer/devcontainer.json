// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-outside-of-docker
{
	"name": "Moodle",
	"image": "mcr.microsoft.com/devcontainers/base:bullseye",
	"features": {
		"ghcr.io/devcontainers/features/node:1": { "version": "18.14.0" },
		"ghcr.io/devcontainers/features/php:1": { "version": "8.1" },
		"ghcr.io/devcontainers/features/aws-cli:1": { "version": "2.11.4" },
		"ghcr.io/devcontainers/features/terraform:1": { "version": "1.4.2" },
		"ghcr.io/devcontainers/features/docker-in-docker:2": { "version": "20.10.23" }
	},
	"remoteEnv": {
		"LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"
	}
}
